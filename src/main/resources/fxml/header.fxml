<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.polyTweet.controller.HeaderController" hgap="30">
    <columnConstraints>
        <ColumnConstraints percentWidth="20.0"/>
        <ColumnConstraints percentWidth="20.0"/>
        <ColumnConstraints percentWidth="20.0"/>
        <ColumnConstraints percentWidth="20.0"/>
        <ColumnConstraints percentWidth="20.0"/>
    </columnConstraints>
    <ImageView fx:id="polytweet"
               fitHeight="20.0" fitWidth="20.0"
               preserveRatio="true"
               GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Image url="@/img/polytweet.png"/>
    </ImageView>
    <Button GridPane.columnIndex="1" GridPane.rowIndex="0"
            text="Profile" fx:id="profileButton" onAction="#profileClick"/>
    <Button GridPane.columnIndex="2" GridPane.rowIndex="0"
            text="Actualités" fx:id="actualitiesButton" onAction="#actualitiesClick"/>
    <Button GridPane.columnIndex="3" GridPane.rowIndex="0"
            text="Paramètres" fx:id="settingsButton" onAction="#settingsClick"/>
    <ImageView GridPane.columnIndex="4" GridPane.rowIndex="0"
               fx:id="logout"
               fitHeight="20.0" fitWidth="20.0"
               preserveRatio="true" onMouseClicked="#logoutClick">
        <Image url="@/img/logout.png"/>
    </ImageView>
</GridPane>
